
<h1> <%= @player.username.upcase %>'S PUZZLES </h1>

<style>.column {
  float: left;
  width: 33.33%;
}
/* Clear floats after the columns */
.row:after {
  content: "";
  display: table;
  clear: both;
}   </style>
<div class="row">
  <div class="column"><h3>STATS</h3>
  <p>some text...</p>
  <p>TOTAL ATTEMPTED...</p>
  <p>TOTAL SOLVED...</p>
  <p>PUZZLES UPLOADED...</p>
  </div>

  <div class="column"><h3>MY SOLVES</h3>
<p>
    <% @player.games.map do |g| %>
    <%   if g.solved? == true   %>
  <ul>
    <li>solved - <%= Puzzle.find_by_id(g.puzzle_id).title %> - 
    <a href="/puzzles/<%= g.puzzle_id %>"><button> Puzzle Page </button></a> </li>
    <%   else  %>
    <li>in progress - <%= Puzzle.find_by_id(g.puzzle_id).title %> - 
    <a href="/puzzles/<%= g.puzzle_id %>"><button> Puzzle Page </button></a></li>
  </ul>
      <% end%>
    <%  end   %>
</div>
  
  <div class="column"><h3>MY UPLOADS</h3>

  <a href="/puzzles/new"><button> UPLOAD </button></a>
 
<% @player.games.map do |g| %>
    <%   if g.solved? == true   %>
    <%= g %>
    <% end %>
</div>
</div>

