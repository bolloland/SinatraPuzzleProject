
<h1> <%= @player.username.upcase %>'S PUZZLES </h1>

<style>.column {
  float: left;
  width: 33.33%;
}
/* Clear floats after the columns */
.row:after {
  content: "";
  display: table;
  clear: both;
}   </style>
<div class="row">
  <div class="column"><h3>STATS</h3>
  <p></p>
  <p></p>
 
   <%= @player.games.count %> Puzzle(s) Attempted</p>
  <p>PUZZLES UPLOADED...</p>
  </div>
  <div class="column"><h3><%= @player.username.upcase %>'s SOLVES</h3>
<p>
    <% @player.games.map do |g| %>
    <%   if g.solved? == true   %>
  <ul>
    <li>solved - <%= Puzzle.find_by_id(g.puzzle_id).title %> - 
    <a href="/puzzles/<%= g.puzzle_id %>"><button> Puzzle Page </button></a><br></br> </li>
    <%   else  %>
    <li>in progress - <%= Puzzle.find_by_id(g.puzzle_id).title %> - 
    <a href="/puzzles/<%= g.puzzle_id %>"><button> Puzzle Page </button></a><br></br></li>
  </ul>
      <% end%>
    <%  end   %>
</div>
  
  <div class="column"><h3><%= @player.username.upcase %>'S UPLOADS</h3>

  
 <br></br>
<% Puzzle.all.each do |z| %>
      <% if z.created_by == @player.username %>
      <p><a href="/puzzles/<%= z.id %>"><strong><%= z.title %></strong></a></p>
      <% end %>
<% end %>
</div>
</div>

